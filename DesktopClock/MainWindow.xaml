<Window x:Class="DesktopClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopClock"
        xmlns:vm="clr-namespace:DesktopClock.ViewModels"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        Background="Transparent"
        Title="{Binding WindowTitle}" Height="300" Width="300">
    <Grid>
        <Image Source="/clockface.png" />
        <Viewbox>
            <Canvas Width="300" Height="300">
                <Rectangle Width="10"
                           Height="100"
                           Fill="Black"
                           RenderTransformOrigin="0.5,1"
                           Canvas.Left="145"
                           Canvas.Top="50.5">
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="{Binding HourAngle.Value}"/>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle Width="5"
                           Height="140"
                           Fill="Black"
                           RenderTransformOrigin="0.5,1"
                           Canvas.Left="147.5"
                           Canvas.Top="10.5">
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="{Binding MinuteAngle.Value}"/>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle Width="1"
                           Height="140"
                           Fill="#CC000000"
                           RenderTransformOrigin="0.5,1"
                           Canvas.Left="150"
                           Canvas.Top="10.5">
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="{Binding SecondAngle.Value}"/>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Ellipse Width="20"
                         Height="20"
                         Fill="Black"
                         Canvas.Left="140"
                         Canvas.Top="140"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
